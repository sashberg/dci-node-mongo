extends layout

block content
  .row
    .col.s12.m6
      .card
        .card-content
          h1= article.title
          h5 Written by #{article.author}
          p= article.body
        .card-action
          a.waves-effect.waves-light.btn.orange(href='/article/edit/'+article._id) Edit
          a.waves-effect.waves-light.btn.red.ml-1vh.delete-article(href='#',data-id=article._id) Delete
