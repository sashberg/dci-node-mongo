extends layout

block content
  h1 #{title}
  if msg
    h1.text-center.text-success= msg
    p.text-center Thank you, we will get back to you as soon as possible.
  else
    form(method='POST', action='/send')
      input(placeholder='Name', type='text', value='', required='')
      input(placeholder='Email address', type='email', onblur="this.setAttribute('value', this.value);", value='', required='')
      .flex
        textarea(placeholder='Message', rows='1', required='')
      button Send
