extends layout

block content
  h1 #{title}
  if msg
    h1.text-center.text-success= msg
    p.text-center Thank you, we will get back to you as soon as possible.
  else
  form(method='POST', action='/send')
    label Name: 
    br
    input(type='text', value='', placeholder='', name='name', for='name').form-control
    br
    label Email Address: 
    br
    input(type='text', value='', placeholder='', name='email', for='email').form-control
    br
    label Subject: 
    br
    input(type='text', value='', placeholder='', name='subject', for='subject').form-control
    br
    label Message: 
    br
    textarea(name='message', for='message').form-control Message
    br
    input(type='Submit', value='submit').btn.btn-primary
